<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table,
        tr,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
        }

        .btn-edit {
            border: none;
            width: 60px;
            outline: none;
            height: 25px;
            background: orange;
            cursor: pointer;

        }

        .btn-delete {
            border: none;
            width: 60px;
            outline: none;
            height: 25px;
            background: red;
            cursor: pointer;
        }
    </style>
</head>

<body>


    <table style="width: 100%;">
        <tr>
            <th>Email</th>

            <th>FullName</th>

            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for(let i=0; i < data.length; i++) { %>
            <tr>
                <td>
                    <%= data[i].email %>
                </td>
                <td>
                    <%= data[i].fullName %>
                </td>

                <td>
                    <%= data[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%=data[i].id%>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%=data[i].id%>" class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>